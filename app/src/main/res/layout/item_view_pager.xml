<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/mScanOptionContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d0"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/mQuickly"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/quickly"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:layout_below="@id/mQuickly"
                android:layout_centerHorizontal="true"
                android:text="@string/quickly_scan"
                android:textColor="@android:color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/d0"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/mSlowly"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/slowly"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:layout_below="@id/mSlowly"
                android:layout_centerHorizontal="true"
                android:text="@string/slowly_scan"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </LinearLayout>
    <com.jamie.zyco.pdfer.widget.MyRecyclerView
        android:id="@+id/mPdfRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
